#!/bin/bash
# Script Name: 1-install_nginx_web_server
# Description: Install and configure Nginx on Ubuntu

# Install Nginx with the -y flag to automatically answer yes to prompts
sudo apt-get update
sudo apt-get install -y nginx

# Create a custom index.html file with "Hello World!" message
echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null

# Configure Nginx to serve the custom index.html file
sudo bash -c 'echo "server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    location / {
        root /var/www/html;
        index index.html;
    }
}" > /etc/nginx/sites-available/default'

# Restart Nginx without using systemctl
sudo kill -HUP $(cat /var/run/nginx.pid)

# Output message
echo "Nginx installed and configured. Web server is listening on port 80."
